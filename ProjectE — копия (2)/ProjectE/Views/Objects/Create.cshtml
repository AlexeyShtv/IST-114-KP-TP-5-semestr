@model ProjectE.DAO.Objects

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Новый путевой лист</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Objects</legend>

        <div class="editor-label">
            Количество
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)

        </div>
        <div class="editor-label">
            Поставщик/Отдел
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Dealer)
            @Html.ValidationMessageFor(model => model.Dealer)

        </div>  

       
         <div class="editor-label">
            @Html.LabelFor(model => model.TypeID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TypeID, (List<SelectListItem>)ViewBag.TypesList)
            @Html.ValidationMessageFor(model => model.TypeID)
        </div>
        
        <table>
            <tr>
                <td><div class="editor-label">Выдать</div></td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td>                   </td><td> </td><td><div class="editor-label">Принять</div></td>
            </tr>
        </table>
        
        <div class="editor-field">
            @Html.RadioButtonFor(model => model.OperationID, 1)
            @Html.RadioButtonFor(model => model.OperationID, 2)
            @Html.ValidationMessageFor(model => model.OperationID)
        </div>

        <p>
            <input type="submit" value="Создать"  />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "FreeObjects")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
