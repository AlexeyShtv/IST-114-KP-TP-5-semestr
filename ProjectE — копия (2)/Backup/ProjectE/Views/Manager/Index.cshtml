@model IEnumerable<ProjectE.DAO.Changes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

      <form action = "Manager" method = "GET">
           <select name="filter">
                  <option value="Ожидает">Ожидает</option>
                  <option value="Подтвержден">Подтвержден</option>
                  <option value="Удален">Удален</option>
                  <option value="Отклонен">Отклонен</option>
            </select> 
            <input type = "submit" value = "Ввод">
    </form>



   

<table>
    <tr>
        <th>
            Изменения
        </th>
        <th>
            Отправитель
        </th>
        <th>
            Объект
        </th>
        <th>
            Статус
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Info)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Objects.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusChanges.Name)
        </td>
        <td>
            @Html.ActionLink("Принять", "Accept", new { id=item.Id }) |
            @Html.ActionLink("Отклонить", "Decline", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
